<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageView_foto_item_alumno"
        android:layout_width="100dp"
        android:layout_height="148dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_nombre_item_alumno"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/texto_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_edad_item_alumno"
            android:textSize="16dp"
            android:textColor="@color/texto_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_email_item_alumno"
            android:textSize="16dp"
            android:textColor="@color/texto_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_direccion_item_alumno"
            android:textSize="16dp"
            android:textColor="@color/texto_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_domicilio_item_alumno"
            android:textSize="16dp"
            android:textColor="@color/texto_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_telefono_item_alumno"
            android:textSize="16dp"
            android:textColor="@color/texto_item"/>

    </LinearLayout>


</LinearLayout>