<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView_siglas_asignatura"
            android:layout_width="202dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/textView_siglas_asignatura"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/texto_item"/>

        <TextView
            android:id="@+id/textView_descripcion_asignatura"
            android:layout_width="358dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:text="@string/textView_descripcion_asignatura"
            android:textSize="16sp"
            android:textColor="@color/texto_item"/>

        <TextView
            android:id="@+id/textView_aula_asignatura"
            android:layout_width="358dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/textView_aula_asignatura"
            android:textSize="16sp"
            android:textColor="@color/texto_item"/>
    </LinearLayout>

</LinearLayout>