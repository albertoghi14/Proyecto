<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrarAsignatura"
    android:padding="25sp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTituloBorrarAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViex_titulo_borrar_asignatura"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="80sp"
            android:layout_marginTop="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054" />

        <Spinner
            android:id="@+id/spinnerBorrarAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100sp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTituloBorrarAsignatura" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBorrarAsignatura"
            app:theme="@style/Theme.MaterialComponents"
            android:layout_width="194dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:text="@string/button_borrr_asignatura"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:backgroundTint="@color/color_fondo"
            app:layout_constraintBottom_toTopOf="@+id/spinnerBorrarAsignatura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCancelarBorrarAsignatura"
            app:layout_constraintVertical_bias="0.841"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancelarBorrarAsignatura"
            app:theme="@style/Theme.MaterialComponents"
            android:layout_width="194dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:text="@string/button_cancelar_borrar_asignatura"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:backgroundTint="@color/color_fondo"
            app:layout_constraintBottom_toTopOf="@+id/buttonBorrarAsignatura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.841"/>

    </LinearLayout>