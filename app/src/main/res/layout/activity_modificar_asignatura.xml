<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarAsignatura"
    android:padding="25sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTituloModificarAsignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViex_titulo_modificar_asignatura"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerModificarAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTituloModificarAsignatura" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextModificarSiglasAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/Theme.MaterialComponents.Light"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/texto_item"
            app:boxStrokeColor="@color/texto_item"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:hint="@string/editText_modificar_siglas_asignatura"
            app:helperText="@string/helperText_siglas_modificar_asignatura"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.634">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/spinnerModificarAsignatura"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.458"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextModificarDescripcionAsignatura"
                app:layout_constraintVertical_bias="0.841" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextModificarNombreAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/Theme.MaterialComponents.Light"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/texto_item"
            app:boxStrokeColor="@color/texto_item"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:hint="@string/editText_modificar_descripcion_asignatura"
            app:helperText="@string/helperText_nombre_modificar_asignatura"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.634">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/editTextModificarSiglasAsignatura"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.458"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextModificarAulaAsignatura"
                app:layout_constraintVertical_bias="0.841" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextModificarAulaAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/Theme.MaterialComponents.Light"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/texto_item"
            app:boxStrokeColor="@color/texto_item"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:hint="@string/editText_modificar_aula_asignatura"
            app:helperText="@string/helperText_aula_modificar_asignatura"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.634">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/editTextModificarDescripcionAsignatura"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.458"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonModificarAsignatura"
                app:layout_constraintVertical_bias="0.841" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonModificarAsignatura"
            android:layout_width="194dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:onClick="Modificar"
            android:text="@string/button_modificar_asignatura"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:backgroundTint="@color/color_fondo"
            app:layout_constraintBottom_toTopOf="@+id/editTextModificarAulaAsignaturar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCancelarAnadirProfesor"
            app:layout_constraintVertical_bias="0.841"
            app:theme="@style/Theme.MaterialComponents" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancelarModificarAsignatura"
            android:layout_width="194dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:onClick="Cancelar"
            android:text="@string/button_cancelar_modificar_asignatura"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:backgroundTint="@color/color_fondo"
            app:layout_constraintBottom_toTopOf="@+id/buttonModificarAsignatura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.841"
            app:theme="@style/Theme.MaterialComponents" />

    </LinearLayout>
</LinearLayout>